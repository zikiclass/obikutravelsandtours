generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  fullname     String
  email        String    @unique
  phone        String?
  password     String?
  dateofbirth  String?
  verifyCode   String?
  forgotCode   String?
  referrercode String?
  isAdmin      String    @default("user")
  date         DateTime?
}

model Admin {
  id       Int       @id @default(autoincrement())
  fullname String
  email    String    @unique
  password String?
  date     DateTime?
}
